{
  "expo": {
    "name": "diginews",
    "slug": "diginews",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "diginews",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/fonts/**/*"
    ],
    "extra": {
      "fonts": {
        "Switzer-Regular": "./assets/fonts/Switzer_Complete/Fonts/OTF/Switzer-Regular.otf",
        "Switzer-Bold": "./assets/fonts/Switzer_Complete/Fonts/OTF/Switzer-Bold.otf",
        "Switzer-Black": "./assets/fonts/Switzer_Complete/Fonts/OTF/Switzer-Black.otf",
        "Switzer-Medium": "./assets/fonts/Switzer_Complete/Fonts/OTF/Switzer-Medium.otf",
        "Switzer-SemiBold": "./assets/fonts/Switzer_Complete/Fonts/OTF/Switzer-Semibold.otf",
        "Switzer-Light": "./assets/fonts/Switzer_Complete/Fonts/OTF/Switzer-Light.otf"
      }
    }
  }
}